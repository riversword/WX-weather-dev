text {
  color: #fff;
}

.container {
  height: 100%;
  width: 100%;
  /* background-color: #005bff; */
   background-color: rgb(200,200,200); 
  display: flex;
  flex-direction: column;
}

.box-home {
  display: flex;
  flex-direction: column;
  /* margin-bottom: 20rpx; */
  padding: 20rpx 0;
  font-weight: 600;
  background-color: #005bff;
}

.home-top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 40rpx;
}

.home-position{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 20rpx;
}

.city{
  margin-top: 20rpx;
}
.city text{
  text-align: center;
  font-size: 42rpx;
  font-weight: 700;
}
.city image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.weather{
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  margin-top: -20rpx;
  margin-bottom: 10rpx;
}

/* .weather-img-num{
  display: flex;
