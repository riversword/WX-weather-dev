.weather-img{
  /* width:50%; */
  /* height: 400rpx;
  position: relative;
  margin-bottom: 100rpx; */
  width: 100%;
  height: 600rpx;
  text-align: center;
  position: relative;
  /* border: 1px rgb(200,200,0) solid; */
}
.weather-img image{
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  vertical-align: middle;
}

.weather-num{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  /* width: 50%; */
}
.t-range{
  font-weight: 700;
}
.t-now-num{
  /* font-size: 70rpx; */
  font-size: 90rpx;
  font-weight: 600;
  vertical-align:text-top;
}
.t-unit{
  font-size: 30rpx;
  font-weight: 700;
  /* vertical-align:text-top; */
}
.weather-wind-air{
  display: flex;
  flex-direction: row;
  line-height: 32rpx;
  /* border: 1px rgb(0,0,0) solid; */
  margin: 20rpx 0;
  
}
.weather-wind-air text{
  font-size: 32rpx;
  font-weight: 500;
}
.weather-wind{
  width: 50%;
  text-align: center;
}
.weather-wind image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.vertical-line{
  height: 32rpx;
  width: 1px;
  background-color:white;
}
/* .weather-time{
  width: 50%;
  text-align: center;
} */
.weather-air{
  width: 50%;
  text-align: center;
}
.weather-air image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

swiper{
  width: 100%;
  height:150rpx;
  /* background-color: rgb(240,240,240); */
  background-color: white;
  margin: 10rpx 0;
}
swiper-item{
  display: flex;
  flex-direction: row;
  line-height: 150rpx;
}
swiper-item>view{
  width: 50%;
  display:flex;
  justify-content: space-around;
  /* padding: 0 20rpx; */
}
.wea-detail-name{
  color: #888888;
  font-size: 32rpx;
  /* font-weight: 600; */
}
.wea-detail-value{
  color:rgb(20,200,250);
  font-size: 32rpx;
  /* font-weight: 600; */
}

.box-hours{
  /* margin: 20rpx 0; */
  /* background-color: rgba(255,255,255,0.2); */
  /* background-color: #005bff; */
  /* background-color: rgb(240,240,240); */
  background-color: white;

}
.box-hours text{
  color:rgb(20,20,20);
}
.weather-title{
  width: 90%;
  margin: 10rpx auto;
  text-align: center;
  border-bottom: 1px rgba(255,255,255,0.6) solid;
}
.weather-title text{
  font-size: 36rpx;
}
.hours-list{
  display: flex;
  flex-direction: column;
}
.hours-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 150rpx;
  border-bottom: 1px rgb(150,150,150) solid;
  width:90%;
  margin:0 auto;
  
}
.hours-item:last-child{
  border: none;
}
.hours-item text{
  font-size: 30rpx;
}
.hours-img{
  width: 150rpx;
  height: 150rpx;
  vertical-align: middle;
}

.box-days{
  margin: 10rpx 0;
  /* background-color: #005bff; */
  /* background-color: rgb(240,240,240); */
  background-color: rgb(200,200,200);
}
.box-days text{
  color:rgb(20,20,20);
}
.days-list{
  display: flex;
  flex-direction: row;
   /* justify-content: space-around;  */

  white-space: nowrap; 
}
.days-list text{
  text-align: center;
  /* margin: 10rpx 0; */
}
.days-item{
  /* display: flex;
  flex-direction: column; */
  display: inline-block;
  box-sizing: border-box;
   border: 1px solid rgb(200,200,200);  
  width: 33%;
  text-align: center;
  /* background-color: rgb(240,240,240); */
  background-color: white;
  padding: 20rpx 0;
}
.days-date{
  font-size: 32rpx;
  /* font-weight: 600; */
  color:#888888;
}
.days-img{
  width: 170rpx;
  height: 170rpx;
  margin: 0 auto;
}

.days-wea{
  margin: 10rpx 0;
}
.days-wea text{
  font-size: 32rpx;
}

.days-t{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
  /* border: 1px rgb(0,0,0) solid;  */
}
.days-t text{
  /* line-height: 42rpx; */
  font-size: 32rpx;
}
.days-wind{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
  /* border: 1px rgb(0,0,0) solid; */
}

.box-suggests{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.index-1{
  display: flex;
  flex-direction: column;
  text-align: center;
  box-sizing: border-box;
  /* background-color: rgb(240,240,240); */
  background-color: white;
  width: 25%;
  border: 1px rgb(200,200,200) solid;
  padding: 20rpx 0;
}
.index-1.more{
  display: flex;
  flex-direction: column;
  justify-content:center;
}
.index-1 image{
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  padding: 0;
}

.index-name{
  color:#888888;
  margin-top: 0;
  font-size: 20rpx;
}

.index-value{
  /* color:rgb(20,20,20); */
  color:rgb(20,200,250);
  font-size: 30rpx;
  margin-top: 10rpx;
}